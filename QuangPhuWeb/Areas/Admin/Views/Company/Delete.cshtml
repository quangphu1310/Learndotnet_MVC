@model Company

<form method="post">
    <input asp-for="Id" hidden />

    <div class="border p-3 mt-4">
        <div class="row">
            <h2 class="text-primary">Delete Company</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="StreetAdress"></label>
            <input asp-for="StreetAdress" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="City"></label>
            <input asp-for="City" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="State"></label>
            <input asp-for="State" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="PostalCode"></label>
            <input asp-for="PostalCode" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" disabled />
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary">Delete</button>
            </div>
            <div class="col-6">
                <a asp-controller="company" asp-action="index" class="btn btn-outline-secondary">Back to list</a>
            </div>
        </div>
    </div>
</form>
