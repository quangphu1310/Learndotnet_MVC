@{
    ViewData["Title"] = "Category";
}
@model List<Category>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>Category List</h2>
        </div>
        <div class="col-6 text-end ">
            <a asp-controller="category" asp-action="create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create a category
            </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var cate in Model)
        {
            <tr>
                <td>@cate.Name</td>
                <td>@cate.DisplayOrder</td>
                <td>
                    <div class="w-50 btn-group" role="group">
                        <a asp-controller="category" asp-action="edit" asp-route-id="@cate.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="category" asp-action="delete" asp-route-id="@cate.Id" class="btn btn-danger">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        
        }
        
    </tbody>
    
</table>