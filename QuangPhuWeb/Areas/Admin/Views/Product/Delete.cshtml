@model Product

<form method="post">
    <input asp-for="Id" hidden />

    <div class="border p-3 mt-4">
        <div class="row">
            <h2 class="text-primary">Edit Product</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="ISBN"></label>
            <input asp-for="ISBN" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="listPrice"></label>
            <input asp-for="listPrice" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="Price50"></label>
            <input asp-for="Price50" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="Price100"></label>
            <input asp-for="Price100" class="form-control" disabled/>
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary">Delete</button>
            </div>
            <div class="col-6">
                <a asp-controller="product" asp-action="index" class="btn btn-outline-secondary">Back to list</a>
            </div>
        </div>
    </div>
</form>
