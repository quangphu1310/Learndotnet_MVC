@{
    ViewData["Title"] = "User";
}
@model List<ApplicationUser>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>User List</h2>
        </div>
       
    </div>
</div>
<table id="tblData" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                Phone
            </th>
            <th>
                Company
            </th>
            <th>
                Role
            </th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                @if(user.Company != null)
                {
                    <td>@user.Company.Name</td>
                }
                else
                {
                    <td></td>
                }
                <td>@user.Role</td>

                <td>
                    <div class="w-50 btn-group" role="group">
                        <a asp-controller="product" asp-action="upsert" asp-route-id="@user.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="product" asp-action="delete" asp-route-id="@user.Id" class="btn btn-danger">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>

        }

    </tbody>

</table>
